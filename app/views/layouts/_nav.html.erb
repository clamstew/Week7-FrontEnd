            <li><%= link_to "#{post.title}", post_path(post) %></li>
          <% end %>
        </ul>
      </li>
      <li class="divider"></li>
      <li class="has-form">
          <div class="row collapse">
            <%= form_tag(search_path) do %>
              <div class="small-8 columns">
                
