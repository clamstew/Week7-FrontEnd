                <%#= button_to "Search", search_path(params[:title_search]), class: "alert button" %>
                <%#= f.submit 'Search', class: "alert button", method: :post %>
                <%= submit_tag "Search", :name => nil, class: "alert button" %> 
              </div>
            <% end %>
          </div>
